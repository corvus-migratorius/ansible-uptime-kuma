---
services:
  uptime-kuma:
    image: louislam/uptime-kuma:{{ kuma_img_version }}
    container_name: uptime-kuma
    volumes:
      - {{ kuma_project_dir }}/data:/app/data
    ports:
      - "0.0.0.0:{{ kuma_port }}:{{ kuma_port }}"
    restart: unless-stopped
    cap_drop:
      - ALL
    cap_add:
      - CAP_NET_ADMIN
      - CAP_SETGID
      - CAP_SETUID
    deploy:
      replicas: 1
      resources:
        limits:
          cpus: {{ kuma_limit_cpus }}
          memory: {{ kuma_limit_ram }}
    healthcheck:
      test: ["CMD", "extra/healthcheck"]
      interval: 60s
      timeout: 30s
      retries: 5
    security_opt:
      - no-new-privileges:true

volumes:
  uptime-kuma-data:
